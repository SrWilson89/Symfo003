{# templates/tpv/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}
    {{ name }} | {{ empresa }}
{% endblock %}

{% block body %}
    <h1>Interfaz TPV</h1>
    {# Aquí debes colocar todo el código HTML que tenías en tu TpvController.php #}
    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Productos</h5>
                    </div>
                    <div class="card-body">
                        <div id="product-list" class="d-grid gap-2">
                            {# Aquí se generarán los botones de productos dinámicamente con JavaScript #}
                            {% for producto in productos %}
                                <button class="btn btn-outline-secondary producto-btn" data-id="{{ producto.id }}" data-nombre="{{ producto.nombre }}" data-precio="{{ producto.precio }}">{{ producto.nombre }}</button>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">Cesta de la Compra</h5>
                    </div>
                    <div class="card-body">
                        <ul id="cesta" class="list-group mb-3">
                            {# Los items se añadirán aquí con JavaScript #}
                        </ul>
                        <div class="d-flex justify-content-between">
                            <strong>Total:</strong>
                            <strong id="total-cesta">0.00 €</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        // Debes copiar aquí el código JavaScript que tenías en TpvController.php
        const productos = {{ productos|json_encode()|raw }};
        const cesta = document.getElementById('cesta');
        const totalCesta = document.getElementById('total-cesta');
        
