{# templates/venta/new.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Añadir Nueva Venta{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .venta-container {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 2rem 0;
        }
        
        .venta-card {
            border: none;
            border-radius: 20px;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.95);
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .venta-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 35px 70px rgba(0, 0, 0, 0.2);
        }
        
        .venta-header {
            background: linear-gradient(135deg, #28a745, #20c997);
            padding: 2rem;
            text-align: center;
            position: relative;
            overflow: hidden;
        }
        
        .venta-header::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.1), transparent);
            transform: rotate(45deg);
            animation: shimmer 3s infinite;
        }
        
        @keyframes shimmer {
            0% { transform: translateX(-100%) rotate(45deg); }
            100% { transform: translateX(100%) rotate(45deg); }
        }
        
        .venta-header h1 {
            color: white;
            font-weight: 700;
            font-size: 1.8rem;
            margin: 0;
            position: relative;
            z-index: 1;
        }
        
        .venta-header .icon {
            font-size: 3rem;
            color: rgba(255, 255, 255, 0.8);
            margin-bottom: 1rem;
        }
        
        .venta-body {
            padding: 2.5rem;
        }
        
        .form-floating {
            margin-bottom: 1.5rem;
            position: relative;
        }
        
        .form-floating .form-control,
        .form-floating .form-select {
            border: 2px solid #e9ecef;
            border-radius: 15px;
            padding: 1rem 1.25rem;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: rgba(248, 249, 250, 0.5);
        }
        
        .form-floating .form-control:focus,
        .form-floating .form-select:focus {
            border-color: #28a745;
            box-shadow: 0 0 20px rgba(40, 167, 69, 0.2);
            background: white;
            transform: translateY(-2px);
        }
        
        .form-floating label {
            color: #6c757d;
            font-weight: 500;
        }
        
        .form-floating .form-control:focus ~ label,
        .form-floating .form-control:not(:placeholder-shown) ~ label,
        .form-floating .form-select:focus ~ label,
        .form-floating .form-select:not([value=""]) ~ label {
            color: #28a745;
            font-weight: 600;
        }
        
        .btn-save {
            background: linear-gradient(135deg, #28a745, #20c997);
            border: none;
            border-radius: 15px;
            padding: 1rem 2rem;
            font-size: 1.1rem;
            font-weight: 600;
            color: white;
            width: 100%;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }
        
        .btn-save::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s;
        }
        
        .btn-save:hover::before {
            left: 100%;
        }
        
        .btn-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(40, 167, 69, 0.3);
        }
        
        .btn-back {
            background: linear-gradient(135deg, #6c757d, #495057);
            border: none;
            border-radius: 15px;
            padding: 0.75rem 1.5rem;
            color: white;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .btn-back:hover {
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(108, 117, 125, 0.3);
        }
        
        .form-icon {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #28a745;
            font-size: 1.2rem;
            z-index: 5;
        }
        
        .input-group-custom {
            position: relative;
        }
        
        .currency-symbol {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #28a745;
            font-weight: 600;
            z-index: 5;
        }
        
        .form-floating .form-control.with-currency {
            padding-left: 2.5rem;
        }
        
        @media (max-width: 768px) {
            .venta-container {
                padding: 1rem;
            }
            
            .venta-body {
                padding: 1.5rem;
            }
            
            .venta-header {
                padding: 1.5rem;
            }
            
            .venta-header h1 {
                font-size: 1.5rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="venta-container">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6 col-md-8">
                    <div class="venta-card">
                        <div class="venta-header">
                            <div class="icon">
                                <i class="fas fa-cash-register"></i>
                            </div>
                            <h1>Añadir Nueva Venta</h1>
                        </div>
                        <div class="venta-body">
                            {{ form_start(ventaForm, {'attr': {'novalidate': 'novalidate'}}) }}
                                
                                <div class="form-floating">
                                    {{ form_widget(ventaForm.empleado, {'attr': {'class': 'form-select', 'placeholder': 'Seleccionar empleado'}}) }}
                                    {{ form_label(ventaForm.empleado, 'Empleado') }}
                                    <div class="form-icon">
                                        <i class="fas fa-user-tie"></i>
                                    </div>
                                </div>

                                <div class="form-floating input-group-custom">
                                    <div class="currency-symbol">€</div>
                                    {{ form_widget(ventaForm.total, {'attr': {'class': 'form-control with-currency', 'placeholder': '0.00', 'step': '0.01'}}) }}
                                    {{ form_label(ventaForm.total, 'Total de la Venta') }}
                                    <div class="form-icon">
                                        <i class="fas fa-euro-sign"></i>
                                    </div>
                                </div>

                                <div class="form-floating">
                                    {{ form_widget(ventaForm.fecha, {'attr': {'class': 'form-control', 'placeholder': 'dd/mm/aaaa'}}) }}
                                    {{ form_label(ventaForm.fecha, 'Fecha de la Venta') }}
                                    <div class="form-icon">
                                        <i class="fas fa-calendar-alt"></i>
                                    </div>
                                </div>

                                <button type="submit" class="btn-save mt-4">
                                    <i class="fas fa-save me-2"></i>
                                    Guardar Venta
                                </button>
                                
                            {{ form_end(ventaForm) }}
                        </div>
                    </div>
                    
                    <div class="text-center mt-4">
                        <a href="{{ path('app_dashboard') }}" class="btn-back">
                            <i class="fas fa-arrow-left"></i>
                            Volver al Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}